<Window x:Class="Client_MegaCasting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_MegaCasting"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="12">
                <Button Width="150" Height="50" Content="Client" Click="ClientClick" Margin="12"></Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="12">
                <Button Width="150" Height="50" Content="Partenaires de diffusion" Click="PartenaireClick" Margin="12"></Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="12">
                <Button Width="150" Height="50" Content="Offre" Click="OffreClick" Margin="12"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
